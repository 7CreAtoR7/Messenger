<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="ru.ilya.messenger.presentation.customViewsEmojis.MessageViewGroup">

    <ImageView
        android:id="@+id/user_image_flexBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/user_name_flexBox"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textSize="15sp"
        android:textColor="@color/userNameGreenColor"/>

    <TextView
        android:id="@+id/user_messageText_flexBox"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/hi_message"/>

</merge>